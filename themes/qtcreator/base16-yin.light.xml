<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Yin Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#DDDDDD" background="#222222"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#BBBBBB"/>
  <style name="CurrentLine" background="#BBBBBB"/>
  <style name="LineNumber" foreground="#BBBBBB"/>
  <style name="CurrentLineNumber" foreground="#BBBBBB" bold="true"/>
  <style name="SearchResult" background="777777"/>
  <style name="Parentheses" background="#555555" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#FFFFFF" background="#BBBBBB"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#BBBBBB"/>
  <style name="Occurrences.Rename" background="#BBBBBB"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#777777"/>

  <!-- language primitives -->
  <style name="Number" foreground="#777777"/>
  <style name="String" foreground="#777777"/>
  <style name="Keyword" foreground="#222222"/>
  <style name="Operator" foreground="#DDDDDD"/>
  <style name="Preprocessor" foreground="#222222"/>
  <style name="Label" foreground="#777777"/>

  <!-- types, classes -->
  <style name="Type" foreground="#777777"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#222222"/>
  <style name="VirtualMethod" foreground="#222222" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#EEEEEE"/>
  <style name="Local" foreground="#DDDDDD"/>
  <style name="Static" foreground="#DDDDDD"/>
  <style name="JsScopeVar" foreground="#DDDDDD" italic="true"/>
  <style name="JsImportVar" foreground="#DDDDDD" italic="true"/>
  <style name="JsGlobalVar" foreground="#DDDDDD" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#555555"/>

  <!-- comments -->
  <style name="Comment" foreground="#BBBBBB"/>
  <style name="DisabledCode" foreground="#BBBBBB"/>
  <style name="Doxygen.Comment" foreground="#BBBBBB"/>
  <style name="Doxygen.Tag" foreground="#BBBBBB"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#222222"/>
  <style name="Binding" foreground="#777777"/>
  <style name="QmlExternalId" foreground="#222222" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#222222" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#222222"/>
  <style name="DiffLocation" foreground="#222222"/>
  <style name="AddedLine" foreground="#777777"/>
  <style name="RemovedLine" foreground="#777777"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#222222"/>
  <style name="DiffContextLine" foreground="#222222"/>
  <style name="DiffSourceLine" foreground="#777777"/>
  <style name="DiffSourceChar" foreground="#777777" background="#777777"/>
  <style name="DiffDestLine" foreground="#777777"/>
  <style name="DiffDestChar" foreground="#777777" background="#777777"/>
</style-scheme>
